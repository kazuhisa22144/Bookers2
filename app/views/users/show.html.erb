
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<p id="notice">
<%= notice %>
</p>

<div class="container">
  <div class="row">

    <div class="col-lg-3">
      <%= render 'users/list2',
       user: @user, book: @book %>
    </div>

    <div class="col-lg-9">
      <h1>Books</h1>
          <thead>
          <tr>
          <th></th>
            <th>Title</th>
            <th>Opinion</th>
          <th></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


