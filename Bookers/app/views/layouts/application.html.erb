<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="container">
            <div class="navbar-header">
            <p class="navbar-brand" style="color:white;">Bookers2</p>
            </div>
              <ul class="nav navbar-nav navbar-right">

                <% if user_signed_in? %>

                <li class="header-icon"><%= link_to  "　Home", user_path(current_user.id), class: "glyphicon glyphicon-home home"  %></li>
                <li class="header-icon"><%= link_to "　User", users_path, class: "glyphicon glyphicon-user users" %></li>
                <li class="header-icon"><%= link_to "　Books", books_path, class: "glyphicon glyphicon-book books" %></li>
                <li class="header-icon"><%= link_to "　logout", destroy_user_session_path, method: :delete , class: "glyphicon glyphicon-share logout" %></li>

                <% else %>

                <li class="header-icon"><%= link_to "　Home", root_path , class: "glyphicon glyphicon-home home" %></li>
                <li class="header-icon"><%= link_to "　About", pages_about_path, class: "glyphicon glyphicon-link about" %></li>
                <li class="header-icon"><%= link_to "　Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
                <li class="header-icon"><%= link_to "　Login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>

                <% end %>

              </ul>

          </div>
        </div>
      </nav>

      <% if flash[:notice]%>
        <div class="flash" style ="font-size: 50px; text-align: center; color: yellow">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert]%>
        <div class="flash" style ="font-size: 50px; text-align: center; color: green">
          <%= flash[:alert] %>
        </div>
      <% end %>

    </div>

  <%= yield %>

  </body>
</html>
