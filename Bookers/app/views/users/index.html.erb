<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/current_user_info', user: @user, book: @book %>
		</div>
		
		<h1>Users</h1>
			<div class="col-lg-9">
				<table class="table" border="0">
					<tr class="box" >
						<th class="user-image"></th>
						<th class="user-name">Name</th>
						<th class="book-opinion">Opinion</th>
					</tr>
					<% @users.each do |user| %>
					<tr class="box">
						<td ><%= attachment_image_tag user, :image, :fill, 50, 50,fallback: "no_image.jpg",size: '50x50' ,class: "user_image" %></td>
						<td ><%= user.username %></td>
						<td ><%= link_to 'Show' ,user_path(user.id), class: "user_#{user.id}" %></td>
						</tr>
					<% end %>
				</table>
			</div>
	</div>
</div>

