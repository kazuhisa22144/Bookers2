
<div class="container">
    <div class="row">
      <div class="col-lg-3">
        <h1>Userinfo</h1>

          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_for(@user) do |f| %>
            <label>Name</label>
            <%= f.text_field :username ,class: "form-control name"%>
            <label>Image</label>
            <%= f.attachment_field :image ,class: "form-control user_image"%>
            <label>Introduction</label>
            <%= f.text_area :introduction ,class: "form-control introduction"%>
            <%= f.submit "変更を保存" ,class: "btn btn-primary form-control" %>
          <% end %>
      </div>
    </div>
</div>