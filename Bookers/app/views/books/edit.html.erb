
<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>
			<div class="col-lg-8">
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
						<% if @book.errors.any? %>
						    <div id="error_explanation">
						      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
						      <ul>
						      	<% @book.errors.full_messages.each do |message| %>
						        <li><%= message %></li>
						      	<% end %>
						      </ul>
						    </div>
						<% end %>

						<p>Title</p>
							<%= f.text_field :title, class: "form-control book_title " %>
						<p>Opinion</p>
							<%= f.text_area :opinion, class: "form-control book_body" %>
						<%= f.submit 'Update Book',class: "btn btn-primary form-control" %>
					<% end %>
					
					<%= link_to 'Show' ,book_path(@book.id), class: "book_#{@book.id}" %>
					<span>|</span>
					<%= link_to 'Back' ,books_path ,class: "back" %>

				<p class = "text-right">CopyRight Infratop.inc</p>
			</div>
		<div class="col-lg-2"></div>
	</div>
</div>

 <%= render 'books/list', books: @books %>
 <%= render 'users/list', users: @users %>