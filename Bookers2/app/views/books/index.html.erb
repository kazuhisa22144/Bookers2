

<%= render 'users/list', users: @users, books: @books %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if user_signed_in? %>
  <p><%= link_to 'book', books_path %></p>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list2', user: @user, book: @book %>
    </div>

    <div class="col-lg-9">
      
      <h1>Books</h1>

      <table class="table table-hover">
        <thead>


        <% if @book.errors.any? %>
          <%= @book.errors.count %>error
          <% @book.errors.full_messages.each do |message| %>
              <%= message %>
          <% end %>
        <% end %>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback:"/images/no_image.jpg" %></td>
              <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
