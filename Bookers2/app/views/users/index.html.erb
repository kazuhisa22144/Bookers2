
<%= render 'users/list' %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list2', user: @user, book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
              <%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg', fallback:"/images/no_image.jpg" %>
              </td>
              <td>
              <%= user.name %>
              </td>
              <td>
              <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


